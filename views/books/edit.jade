    a(href="/books").btn.btn-info Back
    br
    div.card
        div.card-header Edit Book
        div.card-body
            form(action="/books/update/#{id}" method="post")
                div.form-group
                    lable Name
                    input(type="text" name="name" value=name autocomplelte="off").form-control
                div.form-group
                    lable Author
                    input(type="text" name="author" value=author autocomplelte="off").form-control
                div.form-group
                    input(type="submit" value="Update").btn.btn-info
   
    
    
   
                    



        
        
                
              
          
        
    
