doctype html
html
  head
  
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    
  body(style="margin-top: 50px;").container
    div.card
      div.card-header
        ul.nav.nav-pills.w-100
          li.class Books
          li.nav-link.ml-auto
            a(class='nav-link active' href='/books/add') Add Books
      
      div.card-body
        if data
          table.table
            thead
              tr
                th(scope="col") #
                th(scope="col") Name
                th(scope="col") Author
                th(width="200px") Action
            tbody
              - for (let i = 0; i < data; i++ )
                  tr 
                    th(scope="row") i+1 
                    td data[i].name
                    td data[i].author
                      a(href="../books/edit/data[i].id" class="btn btn-success edit") Edit 
                      a(href="../books/delete/data[i].id" onclick="return alert('Are you Sure?')" class="btn btn-danger delete") Delete
        if !data
          p.text-center No book found!
                    



        
        
                
              
          
        
    
